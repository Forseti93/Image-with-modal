<div style="display:none;">tippy-js</div>
{{ 'lookbook-with-modal.css' | asset_url | stylesheet_tag }}

{% assign blocks_types = section.blocks | map: 'type' | join %}
{% assign section_bg_color = 'background: ' | append: section.settings.bg_color | append: ';' %}
{% assign section_description_position_y = 'align-items: '
  | append: section.settings.description_position_vertically
  | append: ';'
%}
{% assign section_description_position_x = 'justify-content: '
  | append: section.settings.description_position_horizontally
  | append: ';'
%}

{%- style -%}
  .section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 1024px) {
    .section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div
  class="lookbook-with-modal-wrapper section-{{ section.id }} {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
  style="{{ section_bg_color }}"
>
  <div class="image-description-wrapper  {% if section.settings.look_image_position == "right" %}left-column--right{% endif %}">
    <div class="left-column col">
      <div class="image-wrapper">
        {{ section.settings.look_image | image_url: width: 1200 | image_tag: class: 'lookbook-image' }}
        {% for block in section.blocks -%}
          {%- case block.type %}
            {% when 'related_product' %}
              <a
                {{ block.shopify_attributes }}
                id="{{ block.id }}"
                class="related-product"
                href="{{- block.settings.related_product_id.url -}}"
                aria-label="{{ block.settings.related_product_id.title }}"
                target="_blank"
                style="top: calc(50% + {{  block.settings.y_perc }}px); left: calc(50% + {{  block.settings.x_perc }}px); --bg-col: {{ block.settings.bg_color }}; --bord-col: {{ block.settings.bord_color }}; "
              >
              </a>
          {% endcase %}
        {% endfor %}
      </div>
    </div>
    {% if blocks_types contains 'content_description' %}
      <div
        class="right-column col"
        style="{{ section_description_position_y }} {{ section_description_position_x }}"
      >
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'content_description' -%}
              <div class="content-description" {{ block.shopify_attributes }}>
                {{ block.settings.content_description }}
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    {% endif %}
  </div>
  <button class="button">Shop the look</button>

  <script>
    window.document.addEventListener('DOMContentLoaded', function () {
      {% for block in section.blocks %}
        {% if block.type == 'related_product' %}
          tippy('#{{ block.id }}', {
            content: '{{ block.settings.related_product_id.title }}',
            placement: 'bottom',
          });
        {% endif %}
      {% endfor %}
    });
  </script>
</div>

{% schema %}
{
  "name": "Lookbook",
  "tag": "section",
  "class": "lookbook-with-modal",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Section layout"
    },
    {
      "type": "select",
      "label": "Look image position",
      "id": "look_image_position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "color_background",
      "label": "Background color",
      "id": "bg_color"
    },
    {
      "type": "select",
      "label": "Description position vertically",
      "id": "description_position_vertically",
      "options": [
        {
          "value": "flex-start",
          "label": "Top"
        },
        {
          "value": "center",
          "label": "Middle"
        },
        {
          "value": "flex-end",
          "label": "Bottom"
        }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "label": "Description position horizontally",
      "id": "description_position_horizontally",
      "options": [
        {
          "value": "start",
          "label": "Top"
        },
        {
          "value": "center",
          "label": "Middle"
        },
        {
          "value": "end",
          "label": "Bottom"
        }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Look Image"
    },
    {
      "type": "image_picker",
      "id": "look_image",
      "label": "Image",
      "info": "*Tested with horizontal image, h/w ~ 1/1.5"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "related_product",
      "name": "Related product",
      "limit": 6,
      "settings": [
        { "type": "paragraph", "content": "*By default, all products are centered and overlapping." },
        {
          "type": "product",
          "id": "related_product_id",
          "label": "Related product"
        },
        { "type": "header", "content": "Product's location" },
        {
          "type": "range",
          "id": "y_perc",
          "label": "Space from the center, vertically",
          "min": -500,
          "max": 500,
          "step": 10,
          "unit": "px",
          "default": 0
        },
        {
          "type": "range",
          "id": "x_perc",
          "label": "Space from the center, horizontally",
          "min": -500,
          "max": 500,
          "step": 10,
          "unit": "px",
          "default": 0
        },
        {
          "type": "color",
          "label": "Background and shadows color",
          "id": "bg_color",
          "default": "#000"
        },
        {
          "type": "color",
          "label": "Border color",
          "id": "bord_color",
          "default": "#fff"
        }
      ]
    },
    {
      "type": "content_description",
      "name": "Description",
      "limit": 1,
      "settings": [
        {
          "type": "richtext",
          "id": "content_description",
          "label": "Content description",
          "default": "<p>Description</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Lookbook"
    }
  ]
}
{% endschema %}
